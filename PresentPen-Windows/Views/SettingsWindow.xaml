<Window x:Class="PresentPen.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PresentPen 설정"
        Width="480" Height="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                  Text="설정"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="{StaticResource TextBrush}"
                  Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 그리기 설정 -->
                <GroupBox Header="그리기" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16">
                    <StackPanel Margin="8">
                        <TextBlock Text="펜 두께" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="PenThicknessSlider"
                                   Width="200"
                                   Minimum="1" Maximum="20"
                                   Value="3"
                                   ValueChanged="PenThicknessSlider_ValueChanged"/>
                            <TextBlock x:Name="PenThicknessText" Text="3"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 커서 하이라이트 설정 -->
                <GroupBox Header="커서 하이라이트" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16">
                    <StackPanel Margin="8">
                        <CheckBox x:Name="HighlightEnabledCheck"
                                 Content="커서 하이라이트 활성화"
                                 Foreground="{StaticResource TextBrush}"
                                 IsChecked="False"
                                 Checked="HighlightEnabledCheck_Changed"
                                 Unchecked="HighlightEnabledCheck_Changed"/>

                        <TextBlock Text="스타일" Foreground="{StaticResource TextBrush}" Margin="0,12,0,4"/>
                        <ComboBox x:Name="HighlightStyleCombo"
                                 Width="200"
                                 HorizontalAlignment="Left"
                                 SelectionChanged="HighlightStyleCombo_SelectionChanged">
                            <ComboBoxItem Content="Ring (테두리)" Tag="Ring"/>
                            <ComboBoxItem Content="Halo (그라데이션)" Tag="Halo" IsSelected="True"/>
                            <ComboBoxItem Content="Filled (채움)" Tag="Filled"/>
                            <ComboBoxItem Content="Squircle (둥근 사각)" Tag="Squircle"/>
                        </ComboBox>

                        <TextBlock Text="색상" Foreground="{StaticResource TextBrush}" Margin="0,12,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Width="30" Height="30" Margin="2" Background="Yellow"
                                   Click="HighlightColorButton_Click" Tag="Yellow"/>
                            <Button Width="30" Height="30" Margin="2" Background="Red"
                                   Click="HighlightColorButton_Click" Tag="Red"/>
                            <Button Width="30" Height="30" Margin="2" Background="LimeGreen"
                                   Click="HighlightColorButton_Click" Tag="LimeGreen"/>
                            <Button Width="30" Height="30" Margin="2" Background="DodgerBlue"
                                   Click="HighlightColorButton_Click" Tag="DodgerBlue"/>
                            <Button Width="30" Height="30" Margin="2" Background="Orange"
                                   Click="HighlightColorButton_Click" Tag="Orange"/>
                            <Button Width="30" Height="30" Margin="2" Background="HotPink"
                                   Click="HighlightColorButton_Click" Tag="HotPink"/>
                            <Button Width="30" Height="30" Margin="2" Background="Purple"
                                   Click="HighlightColorButton_Click" Tag="Purple"/>
                            <Button Width="30" Height="30" Margin="2" Background="Cyan"
                                   Click="HighlightColorButton_Click" Tag="Cyan"/>
                            <Button Width="30" Height="30" Margin="2" Background="White"
                                   Click="HighlightColorButton_Click" Tag="White"/>
                        </StackPanel>

                        <TextBlock Text="크기" Foreground="{StaticResource TextBrush}" Margin="0,12,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="HighlightRadiusSlider"
                                   Width="200"
                                   Minimum="10" Maximum="100"
                                   Value="30"
                                   ValueChanged="HighlightRadiusSlider_ValueChanged"/>
                            <TextBlock x:Name="HighlightRadiusText" Text="30"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="투명도" Foreground="{StaticResource TextBrush}" Margin="0,12,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="HighlightOpacitySlider"
                                   Width="200"
                                   Minimum="0.1" Maximum="1.0"
                                   Value="0.5"
                                   ValueChanged="HighlightOpacitySlider_ValueChanged"/>
                            <TextBlock x:Name="HighlightOpacityText" Text="50%"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 스포트라이트 설정 -->
                <GroupBox Header="스포트라이트" Foreground="{StaticResource TextBrush}" Margin="0,0,0,16">
                    <StackPanel Margin="8">
                        <CheckBox x:Name="SpotlightZoomCheck"
                                 Content="스포트라이트 내부 줌 활성화"
                                 Foreground="{StaticResource TextBrush}"
                                 IsChecked="True"
                                 Checked="SpotlightZoomCheck_Changed"
                                 Unchecked="SpotlightZoomCheck_Changed"/>

                        <TextBlock Text="스포트라이트 크기" Foreground="{StaticResource TextBrush}" Margin="0,12,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="SpotlightRadiusSlider"
                                   Width="200"
                                   Minimum="50" Maximum="500"
                                   Value="150"
                                   ValueChanged="SpotlightRadiusSlider_ValueChanged"/>
                            <TextBlock x:Name="SpotlightRadiusText" Text="150"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="줌 배율" Foreground="{StaticResource TextBrush}" Margin="0,12,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="SpotlightZoomSlider"
                                   Width="200"
                                   Minimum="1.0" Maximum="5.0"
                                   Value="1.5"
                                   ValueChanged="SpotlightZoomSlider_ValueChanged"/>
                            <TextBlock x:Name="SpotlightZoomText" Text="1.5x"
                                      Foreground="{StaticResource TextBrush}"
                                      Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 단축키 안내 -->
                <GroupBox Header="단축키" Foreground="{StaticResource TextBrush}">
                    <StackPanel Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="화면 확대" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Ctrl+Shift+Z" Foreground="Gray" Margin="0,2"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="그리기" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Ctrl+Shift+D" Foreground="Gray" Margin="0,2"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="스포트라이트" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Ctrl+Shift+S" Foreground="Gray" Margin="0,2"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="타이머" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Ctrl+Shift+T" Foreground="Gray" Margin="0,2"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="커서 하이라이트" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="Ctrl+Shift+H" Foreground="Gray" Margin="0,2"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="실행 취소" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="Ctrl+Z" Foreground="Gray" Margin="0,2"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="그리기 지우기" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="Ctrl+Shift+C" Foreground="Gray" Margin="0,2"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="현재 모드 종료" Foreground="{StaticResource TextBrush}" Margin="0,2"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="ESC" Foreground="Gray" Margin="0,2"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2"
               Content="닫기"
               Style="{StaticResource PrimaryButton}"
               HorizontalAlignment="Right"
               Margin="0,16,0,0"
               Click="CloseButton_Click"/>
    </Grid>
</Window>
