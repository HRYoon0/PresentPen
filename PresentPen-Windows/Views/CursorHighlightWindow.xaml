<Window x:Class="PresentPen.Views.CursorHighlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cursor Highlight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        IsHitTestVisible="False"
        Width="120" Height="120">

    <Grid>
        <!-- Ring 스타일 (테두리만) -->
        <Ellipse x:Name="RingHighlight"
                Width="60" Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                StrokeThickness="4"
                Fill="Transparent"
                Visibility="Collapsed"/>

        <!-- Halo 스타일 (그라데이션) -->
        <Ellipse x:Name="HaloHighlight"
                Width="60" Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Visible"/>

        <!-- Filled 스타일 (채워진 원) -->
        <Ellipse x:Name="FilledHighlight"
                Width="60" Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed"/>

        <!-- Squircle 스타일 (둥근 사각형) -->
        <Border x:Name="SquircleHighlight"
               Width="60" Height="60"
               CornerRadius="12"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Visibility="Collapsed"/>
    </Grid>
</Window>
