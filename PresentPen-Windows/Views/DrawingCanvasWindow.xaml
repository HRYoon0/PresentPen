<Window x:Class="PresentPen.Views.DrawingCanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drawing Canvas"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        Cursor="Pen">

    <Grid>
        <!-- 그리기 캔버스 -->
        <InkCanvas x:Name="DrawCanvas"
                   Background="Transparent"
                   EditingMode="Ink">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Color="Red" Width="3" Height="3" StylusTip="Ellipse"/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>

        <!-- 색상 팔레트 -->
        <StackPanel Orientation="Horizontal"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0">
            <Border Background="#80000000" CornerRadius="8" Padding="8">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="RedBtn" Width="30" Height="30" Margin="2"
                           Background="Red" Click="ColorButton_Click" Tag="Red"/>
                    <Button x:Name="YellowBtn" Width="30" Height="30" Margin="2"
                           Background="Yellow" Click="ColorButton_Click" Tag="Yellow"/>
                    <Button x:Name="GreenBtn" Width="30" Height="30" Margin="2"
                           Background="LimeGreen" Click="ColorButton_Click" Tag="LimeGreen"/>
                    <Button x:Name="BlueBtn" Width="30" Height="30" Margin="2"
                           Background="DodgerBlue" Click="ColorButton_Click" Tag="DodgerBlue"/>
                    <Button x:Name="WhiteBtn" Width="30" Height="30" Margin="2"
                           Background="White" Click="ColorButton_Click" Tag="White"/>
                    <Rectangle Width="1" Fill="#40FFFFFF" Margin="8,4"/>
                    <Button x:Name="ClearBtn" Width="60" Height="30" Margin="2"
                           Content="지우기" Click="ClearButton_Click"
                           Background="#FF5555" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 펜 두께 조절 -->
        <StackPanel Orientation="Vertical"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="20,0,0,0">
            <Border Background="#80000000" CornerRadius="8" Padding="8">
                <StackPanel>
                    <TextBlock Text="두께" Foreground="White" FontSize="11"
                              HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <Slider x:Name="ThicknessSlider"
                           Orientation="Vertical"
                           Height="100"
                           Minimum="1" Maximum="20"
                           Value="3"
                           ValueChanged="ThicknessSlider_ValueChanged"/>
                    <TextBlock x:Name="ThicknessText" Text="3"
                              Foreground="White" FontSize="11"
                              HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 도움말 -->
        <Border Background="#80000000"
                CornerRadius="8"
                Padding="12,8"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="20">
            <TextBlock Text="마우스로 그리기 | Ctrl+Shift+C: 지우기 | ESC: 종료"
                      Foreground="White"
                      FontSize="12"/>
        </Border>
    </Grid>
</Window>
