<Window x:Class="PresentPen.Views.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="200" Height="120"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#E0000000"
            CornerRadius="12"
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 타이머 표시 -->
            <TextBlock x:Name="TimerDisplay"
                      Grid.Row="0"
                      Text="00:00"
                      FontSize="42"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>

            <!-- 컨트롤 버튼 -->
            <StackPanel Grid.Row="2"
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0">
                <Button x:Name="StartStopBtn"
                       Content="▶"
                       Width="40" Height="30"
                       Margin="4,0"
                       Click="StartStopButton_Click"
                       Background="#4CAF50"
                       Foreground="White"
                       FontSize="14"
                       BorderThickness="0"/>
                <Button x:Name="ResetBtn"
                       Content="↺"
                       Width="40" Height="30"
                       Margin="4,0"
                       Click="ResetButton_Click"
                       Background="#FF9800"
                       Foreground="White"
                       FontSize="14"
                       BorderThickness="0"/>
                <Button Content="✕"
                       Width="40" Height="30"
                       Margin="4,0"
                       Click="CloseButton_Click"
                       Background="#F44336"
                       Foreground="White"
                       FontSize="14"
                       BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
